        <% } else { %>
        <a href="/login"> <i class="ri-user-fill"></i>
            Sign In | Register
          </a>  
        <% } %>
      </li>
      <div class="bx bx-menu" id="menu-icon"></div>
    </div>
    <div class="close-btn" id="close-icon">
      <i class="ri-close-fill"></i>
    </div>
  </header>
  <div class="background">
    <div class="container">
      <form method="post" class="fromData" action="/result">
        <div class="objcontain">
          <div class="input-group input-group-sm mb-3">
            <input
              type="number"
              class="form-control"
              step="0.01"
              min="1"
              aria-label="Default"
              aria-describedby="inputGroup-sizing-default"
              id="money-input"
              name="money_input"
              placeholder="Enter money here..."
            />
          </div>
        </div>
      
        <div class="checkboxcontain">
          <label for="item1">
            <input type="radio" id="item1" name="option" value="AiPredict" />
            Ai Predict
          </label>
          <label for="item2">
            <input type="radio" id="item2" name="option" value="Manual" />
            Manual
          </label>
        </div>
        <p id="option_alert" style="display: flex;
        text-align: center;
        color: red;
        display: none;">Please select input type</p>
      
        <div class="objcontain" id="manual-section" style="display:none;">
          <div class="input-group input-group-sm mb-3">
            <input
              type="number"
              class="form-control"
              step="0.01"
              min="0"
              aria-label="Default"
              aria-describedby="inputGroup-sizing-default"
              id="Percentage_input_Manual"
              name="Percentage_input_Manual"
              placeholder="Enter Inflation rate here..."
            />
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">%</span>
            </div>
          </div>
        </div>
      
        <div class="objcontain">
          <div class="input-group input-group-sm mb-3">
            <input
              type="number"
              step="0.01"
              min="1"
              max="50"
              class="form-control"
              aria-label="Default"
              aria-describedby="inputGroup-sizing-default"
              id="Year_input"
              name="Year_input"
              placeholder="Enter year here..."
            />
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroup-sizing-default">year</span>
            </div>
          </div>
        </div>
      
        <div class="objcontain">
          <button type="submit" class="btn btn-dark" id="submit button">Submit</button>
        </div>
      </form>
    </div>
  </div>
  <script src="js/front.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const aiOption = document.getElementById("item1");
      const manualOption = document.getElementById("item2");
      const manualSection = document.getElementById("manual-section");
      const optionAlert = document.getElementById("option_alert");
  
      // Hide/show percentage input for manual option
      aiOption.addEventListener("change", function () {
        manualSection.style.display = "none";
      });
  
      manualOption.addEventListener("change", function () {
        manualSection.style.display = "block";
      });
  
      // Prevent form submission if no option is selected
      document.querySelector("form").addEventListener("submit", function (e) {
        if (!aiOption.checked && !manualOption.checked) {
          optionAlert.style.display = "block";
          e.preventDefault();
        } else {
          optionAlert.style.display = "none";
        }
      });
    });
  </script>
  
</body>

